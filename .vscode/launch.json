{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",         // <--- add this
            "env": {
                "PYTHONPATH": "${workspaceFolder}"  // <--- add this to help imports
            },
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
